<h1>Articles</h1>

<% @articles.each do |article| %>
<div class="card" style="width: 20rem;">
    <div class="card-header">
        <%= article.user %>
    </div>
    <img class="card-img-top" src="<%= article.avatar %>"/>
    <div class="card-body">
        <p class="card-text"><%= article.content %></p>
        <p class="card-text">View: <%= article.view %></p>
    </div>
</div>
<% end %>